<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/deviceName_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Device name"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >
        
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/deviceId_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="Device ID"
        android:inputType="number" />

    <EditText
        android:id="@+id/deviceGroup_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="Group"
        android:inputType="number" >
    </EditText>

    <Spinner
        style="@style/Theme.Greenhouse" 
	    android:id="@+id/deviceBrand_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="Brand"
        android:prompt="@string/addDevice_brand_spinnerPrompt" 
	    />

    <Button
        android:id="@+id/deviceAdd_button"
        style="@style/Theme.Greenhouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Add" />

</LinearLayout>